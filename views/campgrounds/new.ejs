<%include ../partials/header %>
<div class="container">
    <div class="jumbotron">
        <h1 class="text-center">Create new campground </h1>
        <div class="row">
        <div style="width:30%; margin: 1em auto;">
            <form action ="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder ="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder ="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder ="description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder ="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-lg btn-block">Submit</button>
                </div>                    
                <div class="form-group">
                    <a class="btn btn-block btn-warning btn-lg" href="/campgrounds">Back</a>
                </div>    

            </form>
        </div>
        
    </div> 
    </div>
    
    
    
</div>


<%include ../partials/footer %>
