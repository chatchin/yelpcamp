<%include ../partials/header %>
<div class="container">
    <div class="jumbotron">
        <h1 class="text-center">Add new comment to <%=campground.name%> </h1>
        <div class="row">
        <div style="width:30%; margin: 1em auto;">
            <form action ="/campgrounds/<%=campground._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder ="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-lg btn-block">Add a comment</button>
                </div>                    
                <div class="form-group">
                    <a class="btn btn-block btn-warning btn-lg" href="/campgrounds/<%=campground._id%>">Back</a>
                </div>    

            </form>
        </div>
        
    </div> 
    </div>
    
    
    
</div>


<%include ../partials/footer %>
